<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/main_search_for_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/search" />

    <Button
        android:id="@+id/main_button_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_search_for_devices"
        android:layout_alignRight="@+id/main_search_for_devices"
        android:layout_below="@+id/main_search_for_devices"
        android:text="@string/bluetooth" />

    <Button
        android:id="@+id/main_connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_button_bluetooth"
        android:layout_alignRight="@+id/main_button_bluetooth"
        android:layout_below="@+id/main_button_bluetooth"
        android:text="@string/connect" />

    <Button
        android:id="@+id/main_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_connect_button"
        android:layout_alignRight="@+id/main_connect_button"
        android:layout_below="@+id/main_connect_button"
        android:text="@string/send" />

    <Button
        android:id="@+id/main_test_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_send_button"
        android:layout_alignRight="@+id/main_send_button"
        android:layout_below="@+id/main_send_button"
        android:text="@string/test_1" />

    <Button
        android:id="@+id/main_test_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_test_1"
        android:layout_alignRight="@+id/main_test_1"
        android:layout_below="@+id/main_test_1"
        android:text="@string/test_2" />

    <Button
        android:id="@+id/main_test_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_test_2"
        android:layout_alignRight="@+id/main_test_2"
        android:layout_below="@+id/main_test_2"
        android:text="@string/test_3" />

    <Button
        android:id="@+id/main_exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_test_3"
        android:layout_alignRight="@+id/main_test_3"
        android:layout_below="@+id/main_test_3"
        android:text="@string/exit_button" />

</RelativeLayout>