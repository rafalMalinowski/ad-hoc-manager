            android:name="pl.rmalinowski.adhocmanager.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="pl.rmalinowski.adhocmanager.BluetoothActivity"
            android:label="@string/app_name" >
        </activity>
        
        <service
            android:name="pl.rmalinowski.adhocmanager.services.TestService"
            android:label="Nazwa serwisu" >
        </service>        
        <service
            android:name="pl.rmalinowski.adhocmanager.api.impl.AodvService"
            android:label="Serwis AODV" >
        </service>
                <service
            android:name="pl.rmalinowski.adhocmanager.api.impl.BluetoothService"
            android:label="Serwis Bluetooth" >
        </service>
    </application>

</manifest>